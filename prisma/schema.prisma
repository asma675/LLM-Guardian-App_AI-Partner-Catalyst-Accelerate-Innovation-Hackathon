generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model LlmRequest {
  id                String    @id @default(cuid())
  createdAt         DateTime  @default(now())
  model             String
  prompt            String
  response          String?
  latencyMs         Int
  tokens            Int
  costUsd           Float
  error             String?
  piiDetected       Boolean   @default(false)
  hallucinationRisk Float     @default(0)
  flagsJson         String    @default("[]")

  incidents         Incident[]
}

model Incident {
  id            String   @id @default(cuid())
  createdAt     DateTime @default(now())
  title         String
  description   String
  model         String?
  severity      String   @default("MEDIUM")
  status        String   @default("OPEN")
  suggestedFix  String?
  relatedReqId  String?

  request       LlmRequest? @relation(fields: [relatedReqId], references: [id], onDelete: SetNull)
}

model Monitor {
  id             String   @id @default(cuid())
  createdAt      DateTime @default(now())
  name           String
  type           String
  threshold      Float
  enabled        Boolean  @default(true)
  severity       String   @default("MEDIUM")
  triggeredCount Int      @default(0)
}
